# Server Configuration
PORT=3000
NODE_ENV=production

# IMPORTANT: Set this to your deployed URL (required for OAuth and webhooks)
# Example: https://mail-cron.vercel.app or https://mail-cron.onrender.com
BASE_URL=http://localhost:3000

# MongoDB Configuration
# For MongoDB Atlas: mongodb+srv://user:pass@cluster.xxxxx.mongodb.net/mail-cron
MONGODB_URI=mongodb://localhost:27017/mail-cron

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Gmail OAuth Configuration (Google Cloud Console)
GMAIL_CLIENT_ID=your_gmail_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Outlook OAuth Configuration (Azure Portal)
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_TENANT_ID=common

# Gemini AI Configuration (optional, for enhanced classification)
GEMINI_API_KEY=your_gemini_api_key_here
